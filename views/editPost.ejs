<%- include("partials/header.ejs") %>

<div>
  <form action="/edit/<%= post.id %>" method="post">
    <label for="topic">Topic</label>
    <input type="text" name="topic" id="topic" class="input-fields" value="<%= post.topic %>" required/>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="input-fields" value="<%= post.title %>" required/>
    <label for="post-content">Content</label>
    <textarea name="post-content" id="post-content" cols="75" rows="10" class="input-fields" required><%= post['post-content'] %></textarea>
    <input type="submit" value="Save Changes" class="button" />
  </form>
</div>

